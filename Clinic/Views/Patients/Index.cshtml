@using Clinic.Models;
@model List<Clinic.Models.Patient>;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>"We have no patients! What are we doing!?"</h3>
}

@foreach(Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.PatientName}", "Details", new { id = patient.PatientId })</li>
}

<p>@Html.ActionLink("Add new patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
